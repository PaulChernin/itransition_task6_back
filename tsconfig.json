{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "moduleResolution": "nodenext",
    },
    "include": ["src/**/*"]
}